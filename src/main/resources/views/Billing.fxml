<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.webwork.newspaperagencymanager.controller.BillingController">
  <top>
    <Label text="Billing Section" style="-fx-font-size: 20px;" />
  </top>
  <center>
    <TableView fx:id="billingTable">
      <columns>
        <TableColumn text="Customer Name" />
        <TableColumn text="Subscription Details" />
        <TableColumn text="Bill Amount" />
        <TableColumn text="Due Date" />
      </columns>
    </TableView>
  </center>
  <bottom>
    <HBox spacing="10" alignment="CENTER">
      <Button text="Generate Bill" onAction="#handleGenerateBill" />
      <Button text="View Bill" onAction="#handleViewBill" />
      <Button text="Print Bill" onAction="#handlePrintBill" />
    </HBox>
  </bottom>
</BorderPane>
