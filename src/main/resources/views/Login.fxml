<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.webwork.newspaperagencymanager.controller.LoginController" stylesheets="/login.css">
  <center>
    <VBox alignment="CENTER" spacing="15" style="-fx-padding: 40; -fx-pref-width: 400; -fx-pref-height: 300;" >
      <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

      <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Username:" style="-fx-font-size: 14px;" />
        <TextField fx:id="usernameField" prefWidth="200" promptText="Enter your username" />
      </HBox>

      <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Password:" style="-fx-font-size: 14px;" />
        <PasswordField fx:id="passwordField" prefWidth="200" promptText="Enter your password" />
      </HBox>

      <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />

      <Button text="Login" onAction="#handleLogin" style="-fx-font-size: 14px; -fx-padding: 5 20;" />
    </VBox>
  </center>
</BorderPane>
